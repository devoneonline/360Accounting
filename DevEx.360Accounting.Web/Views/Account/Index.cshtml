@model DevEx_360Accounting_Web.Models.AccountListModel

@{
    ViewBag.Title = "Chart Of Accounts";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group" >
            <input type="button" id="btnSave" value="Create New" class="btn btn-default tstyCus-btn" />
        </div>
    </div>
    <div class="col-lg-12 cusGridWrapper">
        @Html.Action("AccountListPartial")
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSave').click(function () {
            var url = '@Url.Content("~/Account/Create")';
            window.location.href = url;
        });
    });
</script>
