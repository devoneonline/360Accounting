@model DevEx_360Accounting_Web.Models.CompanyModel

@{
    ViewBag.Title = "Create Company ";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            @ViewBag.Title
        </h3>
    </div>
</div>
<div class="col-lg-6">
    @using (Html.BeginForm("Create", "Company", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.HiddenFor(model => model.Id)
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
            <input type="button" value="Cancel" class="btn btn-default" onclick="javascript: window.location.href='@Url.Content("~/Company/Index")'" />
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
    }
    }
</div>