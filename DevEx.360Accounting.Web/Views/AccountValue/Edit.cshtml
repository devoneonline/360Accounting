@model DevEx_360Accounting_Web.Models.AccountValueViewModel

@{
    ViewBag.Title = "Account Value";
}

<script src="~/Scripts/jquery-ui-1.10.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
        @using (Html.BeginForm("Edit", "AccountValue", FormMethod.Post, new { @class = "form-horizonatl", role = "form" }))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.ChartId)
            @Html.HiddenFor(m => m.Id)

            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.SetOfBook)
                    @Html.TextBoxFor(m => m.SetOfBook, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Segment)
                    @Html.TextBoxFor(m => m.Segment, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.ValueName)
                    @Html.TextBoxFor(m => m.ValueName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Value)
                    @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate)
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate)
                    @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.AccountType)
                    @Html.DropDownListFor(m => m.AccountType, Model.AccountTypes, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Levl)
                    @Html.TextBoxFor(m => m.Levl, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default tstyCus-btn" />
                    <input type="button" value="Cancel" class="btn btn-default tstyCus-btn" onclick="javascript: window.location.href='@Url.Content("~/AccountValue")'" />
                </div>
            </div>
        }
</div>