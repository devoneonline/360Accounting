@model DevEx_360Accounting_Web.Models.FeatureSetListModel

@{
    ViewBag.Title = "Manage FeatureSet";
}
<div class="container">

    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="form-group col-lg-12">
        <input type="button" value="Create New" class="btn btn-default tstyCus-btn" id="btnNew" />
    </div>

    <div class="col-lg-12 cusGridWrapper">
        @{
            if (Model.FeatureSet != null)
            {
                if (Model.FeatureSet.Count > 0)
                {
                    var grid = new WebGrid(canSort: true,
                        rowsPerPage: _360Accounting.Common.Utility.Configuration.GridRows);
                    grid.Bind(Model.FeatureSet);

                    @grid.GetHtml(tableStyle: "table table-bordered table-hover table-striped",
                            mode: WebGridPagerModes.All,
                            numericLinksCount: 10,
                            htmlAttributes: new { style = "width:100%" },
                            columns: grid.Columns
                            (
                            grid.Column("", header: "Actions", style: "ActionLink",
                                                                       format: (item) => Html.Raw("<a href='" + @Url.Content("~/User/DeleteFeatureSet/") + item.Id + "'><img src='" + @Url.Content("~/Content/images/delete.png") + "' alt='' title='Delete' style='border:0'/></a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href='" + @Url.Content("~/User/Edit/") + item.Id + "'><img src='" + @Url.Content("~/Content/images/edit.png") + "' alt='' title='Edit' style='border:0'/></a>")),
                            grid.Column(columnName: "Name",
                                            header: "Feature Set",
                                            canSort: true),
                            grid.Column("AccessType", header: "Access Level", canSort: true)
                            ))
                }
            }
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnNew').click(function () {
            window.location.href = '@Url.Content("~/User/CreateCompanyFeatureList")';
        });
    });
</script>
