@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model _360Accounting.Web.Models.CustomerListModel

@{
    ViewBag.Title = "Customer Master";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    <div class="clearfix">
        <div class="form-group col-lg-12 ">
            <input type="button" value="Create New" class="btn btn-default tstyCus-btn" id="btnNew" />
        </div>
        <div class="col-lg-12 cusGridWrapper">
            @Html.Action("CustomerListPartial")
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#btnNew').click(function () {
            window.location.href = '@Url.Content("~/Customer/Create")';
        });
    });
</script>