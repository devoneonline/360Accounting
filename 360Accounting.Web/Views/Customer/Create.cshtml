@model _360Accounting.Web.Models.CustomerModel

@{
    ViewBag.Title = "Create Customer";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="clearfix">
        @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.CompanyId)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CustomerName)
                        @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ContactNo)
                        @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate)
                        @Html.EditorFor(model => model.StartDate, new { @class = "form-control" })
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDate)
                        @Html.EditorFor(model => model.EndDate, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address)
                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default tstyCus-btn" />
                        <input type="button" value="Cancel" class="btn btn-default tstyCus-btn" onclick="javascript: window.location.href='@Url.Content("~/Customer/Index")'" />
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('[type=date]').attr('class', 'form-control');

        @*$('#btnCancel').click(function () {
            window.location.href = '@Url.Content("~/Customer/Index")';
        });*@
    });
</script>