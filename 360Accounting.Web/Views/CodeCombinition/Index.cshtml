@model _360Accounting.Web.Models.CodeCombinitionListModel

@{
    ViewBag.Title = "Code Combinition";
}

<div id="dvCriteria">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @ViewBag.Title
            </h1>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            @Html.LabelFor(m => m.SetOfBooks)
            @Html.DropDownListFor(m => m.SOBId, Model.SetOfBooks,
        new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="button" id="btnCreate" value="Create New"
                   class="btn btn-default" />
        </div>

        <div class="col-lg-12">
            @Html.Partial("_List", Model)
        </div>
    </div>
</div>
<div id="dvInput">

</div>

<script type="text/javascript">
    $(document).ready(function () {
        @*$('#btnCreate').click(function () {
            var url = '@Url.Content("~/CodeCombinition/Create?sobId=")' +
                $('#SOBId').val();
            window.location.href = url;
        });*@

        $('#btnCreate').click(function () {
            $.ajax({
                url: '@Url.Content("~/CodeCombinition/Create")',
                data: { sobId: $('#SOBId').val() },
                datatype: 'html',
                type: 'post',
                error: function (error) { },
                success: function (data) {
                    $('#dvCriteria').hide();
                    $('#dvInput').html(data);
                }
            });

            $('#btnCancel').click(function () {
                $('#dvCriteria').show();
                $('#dvInput').empty();
            });
        });
    });
</script>
