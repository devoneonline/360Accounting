@{
    ViewBag.Title = "Exception";
}

<div class="col-lg-12" style="margin-top:10px;">
    @Html.Raw(TempData["ErrorSource"])
</div>

<div class="col-lg-2" style="margin-top:20px;">
    <div class="form-group">
        <input type="button" value="OK" class="tstyCus-btn btn btn-default" onclick="GoBack();" />
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#ExceptionBox').dialog({
                modal: true,
                title: '@Html.Raw(TempData["ErrorMessage"])',
                autoOpen: false,
                height: 'auto',
                width: 500,
            });
        });
    })

    function GoBack() {
        window.location.href = '@Url.Content(TempData["LastURL"] == null ? "/" : TempData["LastURL"].ToString())'
    }

    $('#ExceptionBox').on('dialogclose', function (event) {
        GoBack();
    });

</script>