@model  IEnumerable<_360Accounting.Web.Models.Segment>

@{
    ViewBag.Title = "Account Combination";
}


@{ int count = 0; }
    @foreach (var item in Model)
    {
        count++;
        <div class="clearfix">
            <div class="col-lg-12 customDropDownWrapper">
                @{string comboName = "Combo_" + count.ToString();}
                @item.SegmentName
                @Html.DropDownList(comboName, item.SegmentValueList)
            </div>
        </div>
    }
    <div class="clearfix">
        <div class="col-lg-6">
            <div class="form-group">
                <input type="button" value="Select" class="tstyCus-btn btn btn-default" id="btnSelect" />
            </div>
        </div>
    </div>
<script type="text/javascript">
    $(document).ready(function () {

        $('select').multiselect({
            enableFiltering: true
        });

        $('#btnSelect').click(function () {
            debugger;
            var value=''; 
            $(':selected').each(function (index, element) {
                if (value != '')
                {
                    value = value + '.';
                }
                value = value + element.value;
            });
            $('#CodeCombinationString').val(value);
            $('#dvAccountLookup').dialog('close');
        });

    });
</script>