@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model _360Accounting.Web.Models.ReceiptListModel

@{
    ViewBag.Title = "Receipts";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="form-group">
            @Html.LabelFor(m => m.SetOfBooks)
            @Html.DropDownListFor(m => m.SOBId, Model.SetOfBooks, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="col-lg-3">
        <div class="form-group">
            @Html.LabelFor(m => m.Periods)
            @Html.DropDownListFor(m => m.PeriodId, Model.Periods, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="col-lg-3">
        <div class="form-group">
            @Html.LabelFor(m => m.Customers)
            @Html.DropDownListFor(m => m.CustomerId, Model.Customers, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="col-lg-3">
        <div class="form-group">
            @Html.LabelFor(m => m.Currency)
            @Html.DropDownListFor(m => m.CurrencyId, Model.Currency, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="clearfix">
        <div class="form-group col-lg-12 ">
            <input type="button" value="Create New" class="btn btn-default tstyCus-btn" id="btnNew" />
        </div>
        <div id="dvList" class="col-lg-12 cusGridWrapper">
            @Html.Action("ReceiptListPartial", new { periodId = Model.PeriodId, sobId = Model.SOBId, customerId = Model.CustomerId, currencyId = Model.CurrencyId })
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#btnNew').click(function () {
        var continueCreate = true;

        var inValidInputs = $('#SOBId, #PeriodId, #CustomerId, #CurrencyId').filter(function () { return $(this).val() == null; });
        inValidInputs.each(function (index, item) {
            $('#' + item.id).css('border', '1px solid #ff6600');
            continueCreate = false;
        })

        if (continueCreate) {
            var url = '@Url.Content("~/Receipt/Create?periodId=")' + $('#PeriodId').val() + '&sobId=' + $('#SOBId').val() + '&customerId=' + $('#CustomerId').val() + '&currencyId=' + $('#CurrencyId').val();
            window.location.href = url;
        }
        else
            alert('Please select the values.');
    });

    $('#CustomerId, #CurrencyId').change(function () {
        RefreshGrid();
    });

    $('#SOBId').change(function () {
        var url1 = '@Url.Content("~/Receipt/PeriodList")';

        $.get(url1, { sobId: $(this).val() },
            function (data) {
                var periodDropdown = $('#PeriodId');
                periodDropdown.empty();
                for (var i = 0; i < data.length; i++) {
                    periodDropdown.append('<option value=' + data[i].Value + '>' + data[i].Text + '</option>');
                }
            });

        RefreshGrid();
    });

    $('#PeriodId').change(function () {
        var url2 = '@Url.Content("~/Receipt/CustomerList")';

        $.get(url2, { periodId: $(this).val() },
            function (data) {
                var customerDropdown = $('#CustomerId');
                customerDropdown.empty();
                for (var i = 0; i < data.length; i++) {
                    customerDropdown.append('<option value=' + data[i].Value + '>' + data[i].Text + '</option>');
                }
            });
        RefreshGrid();
    });

    function RefreshGrid() {
        var url3 = '@Url.Content("~/Receipt/ReceiptListPartial")';

        var periodId = $('#PeriodId').val();
        var sobId = $('#SOBId').val();
        var customerId = $('#CustomerId').val();
        var currencyId = $('#CurrencyId').val();

        $.get(url3, { periodId: periodId, sobId: sobId, customerId: customerId, currencyId: currencyId }, function (data) {
                $('#dvList').html(data);
            });
    }

    $(document).ready(function () {
       
    });
</script>