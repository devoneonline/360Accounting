@model _360Accounting.Web.Models.CurrencyListModel

@{
    ViewBag.Title = "Currencies";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @ViewBag.Title
        </h1>
    </div>
</div>
<div class="col-lg-6">
    <div class="form-group">
        @Html.LabelFor(m => m.SetOfBooks)
        @Html.DropDownListFor(m => m.SOBId, Model.SetOfBooks, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="button" id="btnCreate" value="Create New" class="btn btn-default" />
    </div>
</div>

<div id="dvList" class="col-lg-12">
    @Html.Partial("_List", Model)
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCreate').click(function () {
            var url = '@Url.Content("~/Currency/Create?sobId=")' + $('#SOBId').val();
            window.location.href = url;
        });

        $('#SOBId').change(function () {
            $.ajax({
                url: '@Url.Content("~/Currency/GetCurrencyList")',
                data: {
                    sobId: $('#SOBId').val()
                },
                datatype: 'html',
                type: 'post',
                error: function (data) { },
                success: function (data) {
                    $('#dvList').html(data);
                }
            });
        });
    });
</script>

