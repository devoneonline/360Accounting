@model _360Accounting.Web.Models.BankModel

@{
    ViewBag.Title = "Create Bank";
}

<script src="~/Scripts/jquery-ui-1.10.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    @using (Html.BeginForm("Create", "Bank", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.SOBId)

        <div class="clearfix">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.BankName)
                    @Html.TextBoxFor(model => model.BankName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="clearfix">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks)
                    @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.StartDate)
                    @Html.EditorFor(model => model.StartDate, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.EndDate)
                    @Html.EditorFor(model => model.EndDate, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix">

            <div class="col-md-12">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default tstyCus-btn" />
                    <input type="button" value="Cancel" class="btn btn-default tstyCus-btn" onclick="javascript: window.location.href='@Url.Content("~/Bank/Index")'" />
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('[type=date]').attr('class', 'form-control');
    });
</script>
