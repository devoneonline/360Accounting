@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model _360Accounting.Web.Models.BankListModel

@{
    ViewBag.Title = "Banks";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="clearfix">
        <div class="form-group col-lg-12 ">
            <input type="button" value="Create New" class="btn btn-default tstyCus-btn" id="btnNew" />
        </div>
        <div id="dvList" class="col-lg-12 cusGridWrapper">
            @Html.Action("BankListPartial")
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();

        $('#btnNew').click(function () {
            var url = '@Url.Content("~/Bank/Create")';
            window.location.href = url;
        });
    });
</script>