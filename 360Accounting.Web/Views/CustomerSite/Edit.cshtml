@model _360Accounting.Web.Models.CustomerSiteModel

@{
    ViewBag.Title = "Customer Site";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="clearfix">
        @using (Html.BeginForm("Edit", "CustomerSite", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary()
            <input type="hidden" name="Id" value="@Model.Id" />
            @Html.HiddenFor(m => m.CustomerId)
            @Html.HiddenFor(m => m.CreateBy)
            @Html.HiddenFor(m => m.CreateDate)
            @Html.HiddenFor(m => m.UpdateBy)
            @Html.HiddenFor(m => m.UpdateDate)

            <div class="clearfix">

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SiteName)
                        @Html.TextBoxFor(model => model.SiteName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-2 col-md-offset-1">
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate)
                        @Html.EditorFor(model => model.StartDate, new { @class = "date form-control" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDate)
                        @Html.EditorFor(model => model.EndDate, new { @class = "date form-control" })
                    </div>
                </div>
            </div>

            <div class="clearfix">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SiteContact)
                        @Html.TextBoxFor(model => model.SiteContact, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-1">
                    @Html.LabelFor(m => m.CodeCombinationId)
                    <div class="form-group input-group">
                        @Html.HiddenFor(m => m.CodeCombinationId)
                        @Html.TextBoxFor(m => m.CodeCombinationString, new { @class = "form-control AccountLookup", @readonly = "readonly", @placeholder = "Click to get account" })
                        <span class="input-group-addon"><a href="#" class="AccountLookup" tabindex="-1" id="CodeCombinationString"><i class="fa fa-search"></i></a></span>
                    </div>
                </div>
            </div>
            <div class="clearfix">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SiteAddress)
                        @Html.TextAreaFor(model => model.SiteAddress, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-1">
                    <div class="form-group customDropDownWrapper">
                        @Html.LabelFor(m => m.TaxId)
                        @Html.DropDownListFor(m => m.TaxId, Model.TaxCode, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="clearfix">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default tstyCus-btn" />
                        <input type="button" value="Cancel" class="btn btn-default tstyCus-btn" onclick="javascript: window.location.href='@Url.Content("~/CustomerSite/Index/" + Model.CustomerId)'" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#dvDefaultSOB').dialog({
            modal: true,
            title: "Please select your Set of Book",
            autoOpen: false,
            height: 'auto',
            width: 500,
            height: 300,
            zIndex: zind,
        });
    });

    $(document).ready(function () {
        $('[type=date]').attr('class', 'form-control');
    });
</script>