@model _360Accounting.Web.Models.JournalVoucherCreateModel

@{
    ViewBag.Title = "Journal Voucher";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            @ViewBag.Title
        </h3>
    </div>
</div>

@using (Html.BeginForm("Create", "JournalVoucher",
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.HeaderId)
    @Html.HiddenFor(m => m.SOBId)
    @Html.HiddenFor(m => m.PeriodId)
    @Html.HiddenFor(m => m.CurrencyId)

    <div class="col-lg-12">
        <div class="col-md-6">
            @Html.LabelFor(m => m.JournalName)
            @Html.TextBoxFor(m => m.JournalName, new { @class = "form-control" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.SOBName)
            @Html.TextBoxFor(m => m.SOBName, new { @readonly = "readonly", @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.PeriodName)
            @Html.TextBoxFor(m => m.PeriodName, new { @readonly = "readonly", @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.CurrencyName)
            @Html.TextBoxFor(m => m.CurrencyName, new { @readonly = "readonly", @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.DocumentNo)
            @Html.TextBoxFor(m => m.DocumentNo, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.GLDate)
            @Html.TextBoxFor(m => m.GLDate, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.ConversionRate)
            @Html.TextBoxFor(m => m.ConversionRate, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.CodeCombinationId)
            @Html.DropDownListFor(m => m.CodeCombinationId, Model.CodeCombinationList, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.EnteredDr)
            @Html.TextBoxFor(m => m.EnteredDr, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.EnteredCr)
            @Html.TextBoxFor(m => m.EnteredCr, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.Qty)
            @Html.TextBoxFor(m => m.Qty, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.GLLinesDescription)
            @Html.TextBoxFor(m => m.GLLinesDescription, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.TaxRateCode)
            @Html.TextBoxFor(m => m.TaxRateCode, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.AccountedDr)
            @Html.TextBoxFor(m => m.AccountedDr, new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(m => m.AccountedCr)
            @Html.TextBoxFor(m => m.AccountedCr, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
            <input type="button" value="Cancel" class="btn btn-default" id="btnCancel" />
        </div>
    </div>

    <div class="col-lg-12">
        @if (_360Accounting.Web.Mvc.SessionHelper.JournalVoucher != null)
        {
            @Html.Partial("_JournalVoucherDetailList", _360Accounting.Web.Mvc.SessionHelper.JournalVoucher)
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <script type="text/javascript">
                $(document).ready(function () {
                    $('#btnCancel').click(function () {
                        window.location.href = '@Url.Content("~/JournalVoucher/Index")';
                    });
                });
        </script>
    }
}