@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model IEnumerable<_360Accounting.Web.Models.VendorSiteViewModel>

@{
    ViewBag.Title = "Vendor Site(s)";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    <div class="clearfix">
        <div class="col-lg-12">
            <input type="button" value="Back" title="Vendor" onclick="window.location = '@Url.Content("~/Vendor")'" />
        </div>
    </div>
    <div class="clearfix">
        <div class="form-group col-lg-12 ">
            <input type="button" value="Create New" class="btn btn-default tstyCus-btn" id="btnNew" />
        </div>
        <div class="col-lg-12 cusGridWrapper">
            @Html.Action("ListPartial", new { id = ViewBag.VendorId })
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $.noConflict();
        $('#dvDefaultSOB').dialog({
            modal: true,
            title: "Please select your Set of Book",
            autoOpen: false,
            height: 'auto',
            width: 500,
            height: 300,
            zIndex: zind,
        });
    });

    $(document).ready(function () {
        $('#btnNew').click(function () {
            window.location.href = '@Url.Content("~/Vendor/CreateSite/")' + '@ViewBag.VendorId';
        });
    });
</script>