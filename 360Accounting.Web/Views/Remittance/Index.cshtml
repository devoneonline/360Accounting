@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })
@model _360Accounting.Web.Models.RemittanceListModel

@{
    ViewBag.Title = "Remittance";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="form-group">
            @Html.LabelFor(m => m.SetOfBooks)
            @Html.DropDownListFor(m => m.SOBId, Model.SetOfBooks, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="col-lg-4">
        <div class="form-group">
            @Html.LabelFor(m => m.Banks)
            @Html.DropDownListFor(m => m.BankId, Model.Banks, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="col-lg-4">
        <div class="form-group">
            @Html.LabelFor(m => m.BankAccounts)
            @Html.DropDownListFor(m => m.BankAccountId, Model.BankAccounts, new { @class = "form-control criteria" })
        </div>
    </div>

    <div class="col-lg-12">
        <div class="form-group">
            <input type="button" id="btnCreate" value="Create New" class="btn btn-default tstyCus-btn" />
        </div>
    </div>

    <div id="dvList" class="col-lg-12 cusGridWrapper">
        @*@Html.Partial("_List", Model.Remittances)*@
        @Html.Action("ListByModelPartial", Model)                                                                                           ////Make AR
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCreate').click(function () {
            var continueCreate = true;

            var inValidInputs = $('#SOBId, #BankId, #BankAccountId').filter(function () { return $(this).val() == null; });
            inValidInputs.each(function (index, item) {
                $('#' + item.id).css('border', '1px solid #ff6600');
                continueCreate = false;
            })

            if (continueCreate) {
                var url = '@Url.Content("~/Remittance/Create?sobId=")' +                                                                   ////Make AR
                    $('#SOBId').val() +
                    "&bankId=" + $('#BankId').val() +
                    "&bankAccountId=" + $('#BankAccountId').val()
                window.location.href = url;
            }
            else
                alert('Please select the values.');
        });

        jQuery.ajaxSetup({ async: false });

        function RefreshGrid() {
            var url = '@Url.Content("~/Remittance/ListPartial")';                                                                           ////Make AR

            $.get(url, { sobId: $('#SOBId').val(), bankId: $('#BankId').val(), bankAccountId: $('#BankAccountId').val() },
                function (data) {
                    $('#dvList').html(data);
                });
        }

        $('#BankAccountId').change(function () {
            RefreshGrid();
        });

        $('#BankId').change(function ()
        {
            var url = '@Url.Content("~/Remittance/BankAccountList")';                                                                        ////Make AR

            $.get(url, { bankId: $(this).val() },
                function (data)
                {
                    var bankAccountDropdown = $('#BankAccountId');
                    currencyDropdown.empty();
                    for (var i = 0; i < data.length; i++)
                    {
                        bankAccountDropdown.append('<option value=' + data[i].Value + '>' + data[i].Text + '</option>');
                    }
                });

            RefreshGrid();
        });

        $('#SOBId').change(function () {
            var url1 = '@Url.Content("~/Remittance/BankList")';                                                                             ////Make AR

            $.get(url2, { sobId: $(this).val() },
                function (data) {
                    var currencyDropdown = $('#CurrencyId');
                    currencyDropdown.empty();
                    for (var i = 0; i < data.length; i++) {
                        currencyDropdown.append('<option value=' + data[i].Value + '>' + data[i].Text + '</option>');
                    }
                });

            RefreshGrid();
        });
    });
</script>