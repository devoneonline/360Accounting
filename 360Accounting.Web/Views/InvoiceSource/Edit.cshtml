@model _360Accounting.Web.Models.InvoiceSourceViewModel

@{
    ViewBag.Title = "Invoice Source";
}
<div class="container">

    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    @using (Html.BeginForm("Edit", "InvoiceSource", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.SOBId)
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.CompanyId)
        @Html.HiddenFor(m => m.CreateBy)
        @Html.HiddenFor(m => m.CreateDate)
        @Html.HiddenFor(m => m.UpdateBy)
        @Html.HiddenFor(m => m.UpdateDate)
        @Html.HiddenFor(m => m.CodeCombinationId)

        <div class="clearfix">
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            </div>
            <div class="col-md-2 col-md-offset-1">
                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate)
                    @Html.EditorFor(m => m.StartDate, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.EndDate)
                @Html.EditorFor(m => m.EndDate, new { @class = "form-control" })
            </div>
        </div>
        <div class="clearfix">
            <div class="col-lg-6">
                @Html.LabelFor(m => m.CodeCombinationId)
                <div class="form-group input-group">
                    @Html.HiddenFor(m => m.CodeCombinationId)
                    @Html.TextBoxFor(m => m.CodeCombinationIdString, new { @class = "form-control AccountLookup", @readonly = "readonly", @placeholder = "Click to get account" })
                    <span class="input-group-addon"><a href="#" class="AccountLookup" tabindex="-1" id="CodeCombinationIdString"><i class="fa fa-search"></i></a></span>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="form-group col-md-6">
                <input type="submit" value="Save" class="tstyCus-btn btn btn-default" />
                <input type="button" value="Cancel" class="tstyCus-btn btn btn-default" id="btnCancel" />
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('[type=date]').attr('class', 'form-control');

        $('#btnCancel').click(function () {
            window.location = '@Url.Content("~/InvoiceSource")'
        });
    });
</script>
