@model _360Accounting.Web.Models.InvoiceSourceViewModel

@{
    ViewBag.Title = "Invoice Source";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            @ViewBag.Title
        </h3>
    </div>
</div>

@using (Html.BeginForm("Edit", "InvoiceSource", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="col-lg-6">
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.SOBId)
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.StartDate)
            @Html.EditorFor(m => m.StartDate, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EndDate)
            @Html.EditorFor(m => m.EndDate, new { @class = "form-control" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.CodeCombinationId)
            @Html.DropDownListFor(m => m.CodeCombinationId, Model.CodeCombinations, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @*<div class="col-md-offset-2 col-md-10">*@
                <input type="submit" value="Save" class="tstyCus-btn btn btn-default" />
                <input type="button" value="Cancel" class="tstyCus-btn btn btn-default" id="btnCancel" />
            @*</div>*@
        </div>
        
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")

            <script type="text/javascript">
                $(document).ready(function () {
                    $('[type=date]').attr('class', 'form-control');

                    $('#btnCancel').click(function () {
                        window.location='@Url.Content("~/InvoiceSource")'
                    });
                });
            </script>

        }
    </div>
}