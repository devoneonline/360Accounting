@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model _360Accounting.Web.Models.AccountListModel

@{
    ViewBag.Title = "Chart Of Accounts";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    @if (Model.Accounts.Count()==0)
    { 
    <div class="col-lg-12">
        <div class="form-group">
            <input type="button" id="btnCreate" value="Create New" class="btn btn-default tstyCus-btn" />
        </div>
    </div>
    }
    @if (ViewBag.ErrorMessage != "")
    {
        <div class="form-group col-lg-12">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="col-lg-12 cusGridWrapper">
        @Html.Action("AccountListPartial")
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCreate').click(function () {
            var url = '@Url.Content("~/Account/Create")';
            window.location.href = url;
        });
    });
</script>
