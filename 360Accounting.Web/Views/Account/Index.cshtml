@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model _360Accounting.Web.Models.AccountListModel

@{
    ViewBag.Title = "Chart Of Accounts";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">
            <input type="button" id="btnCreate" value="Create New" class="btn btn-default tstyCus-btn" />
        </div>
    </div>
    <div class="col-lg-12 cusGridWrapper">
        @Html.Action("AccountListPartial")
    </div>
</div>



<script type="text/javascript">
    $(function () {
        $.noConflict();
        $('#dvDefaultSOB').dialog({
            modal: true,
            title: "Please select your Set of Book",
            autoOpen: false,
            height: 'auto',
            width: 500,
            height: 300,
            zIndex: zind,
        });
    });

    $(document).ready(function () {
        $('#btnCreate').click(function () {
            var url = '@Url.Content("~/Account/Create")';
            window.location.href = url;
        });
    });
</script>
