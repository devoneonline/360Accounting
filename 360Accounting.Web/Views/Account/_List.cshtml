@model _360Accounting.Web.Models.AccountListModel

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@{
    if (Model.Accounts != null)
    {
        if (Model.Accounts.Count() > 0)
        {
            var grid = new WebGrid(canSort: true);
            grid.Bind(Model.Accounts);
            
            @grid.GetHtml(tableStyle: "table", mode: WebGridPagerModes.All,
            numericLinksCount: 10, htmlAttributes: new { style = "width:100%" },
            columns:grid.Columns(grid.Column(columnName: "CompanyId",
            header: "Company Id", canSort: true),
                grid.Column("SOBId", header: "SOB Id", canSort: true),
                grid.Column("SegmentName1", header: "Segment 1",
                format: (item) => Html.Raw("<a href='" + 
                    @Url.Content("~/Account/Edit/") + item.Id + ">" +
                    item.SegmentName1 + "</a>"), canSort: true),
                    grid.Column("", "", style: "ActionLink",
            format: (item) => Html.Raw("<a href='" + 
                @Url.Content("~/Account/Delete") + item.Id + "'>Delete</a>")
                    )))
                
            
        }
        else
        {
            <div id='dvNoRecord'>No Record Found!</div>
        }
    }
}


