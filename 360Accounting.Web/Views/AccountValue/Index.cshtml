@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })

@model _360Accounting.Web.Models.AccountValueListModel
@{
    ViewBag.Title = "Account Values";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    
    <div class="clearfix">
        <div class="col-lg-6">
            <div class="form-group">
                @Html.HiddenFor(m => m.SOBId)
            </div>
            <div class="form-group customDropDownWrapper">
                @Html.LabelFor(m => m.Segments)
                @Html.DropDownListFor(m => m.Segment, Model.Segments, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="clearfix">
        <div class="form-group col-lg-12">
            <input type="button" id="btnCreate" value="Create New" class="navbar-left btn btn-default tstyCus-btn" />
            <input type="button" class="navbar-right btn btn-default tstyCus-btn" value="Back" title="Account" onclick="window.location = '@Url.Content("~/Account")'" />
        </div>


        <div class="col-lg-12 cusGridWrapper" id="ACPartial">
            @Html.Action("AccountValuesPartial", new { sobId = Model.SOBId, segment = Model.Segment })
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#btnCreate').click(function () {
            var url = '@Url.Content("~/AccountValue/Create?sobId=")' + $('#SOBId').val() + "&segment=" + $('#Segment').val();
            window.location.href = url;
        });

        $('#Segment').change(
            function () {
                var url = '@Url.Content("~/AccountValue/SegmentList")';

                $.ajax({
                    url: '@Url.Content("~/AccountValue/AccountValuesPartial")',
                    data: {
                        sobId: $('#SOBId').val(), segment: $(this).val()
                    },
                    datatype: 'html',
                    type: 'post',
                    error: function (data) { },
                    success: function (data) {
                        $('#ACPartial').empty().html(data);
                    }
                });
            });
    });
</script>

