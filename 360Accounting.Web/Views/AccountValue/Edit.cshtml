@model _360Accounting.Web.Models.AccountValueViewModel

@{
    ViewBag.Title = "Account Value";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
    @using (Html.BeginForm("Edit", "AccountValue", FormMethod.Post, new { @class = "form-horizonatl", role = "form" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.ChartId)
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ValueChar)
        @Html.HiddenFor(m => m.SetOfBook)
        @Html.HiddenFor(m => m.Segment)
        @Html.HiddenFor(m => m.CreateBy)
        @Html.HiddenFor(m => m.CreateDate)
        @Html.HiddenFor(m => m.CompanyId)
        @Html.HiddenFor(m => m.UpdateBy)
        @Html.HiddenFor(m => m.UpdateDate)

        <div class="clearfix">
            <div class="col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(m => m.SetOfBook) (@Html.DisplayFor(m => m.SetOfBook))
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    @Html.LabelFor(m => m.Segment) (@Html.DisplayFor(m=> m.Segment))
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="col-lg-6">
                <div class="form-group customDropDownWrapper ">
                    @Html.LabelFor(m => m.AccountType)
                    @Html.DropDownListFor(m => m.AccountType, Model.AccountTypes, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-1">

            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    @Html.LabelFor(m => m.Levl)
                    @Html.TextBoxFor(m => m.Levl, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.ValueName)
                    @Html.TextBoxFor(m => m.ValueName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-1">

            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate)
                    @Html.EditorFor(m => m.StartDate, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Value)
                    @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-1">

            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate)
                    @Html.EditorFor(m => m.EndDate, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default tstyCus-btn" />
                    <input type="button" value="Cancel" class="btn btn-default tstyCus-btn" onclick="javascript: window.location.href='@Url.Content("~/AccountValue/Index")'" />
                </div>
            </div>
        </div>    
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('[type=date]').attr('class', 'form-control');
    });

    //Validation for Account Value char length..
    $('#Value').keypress(function(e){
        var valueLength = $('#ValueChar').val();
        if(e.charCode > 31 && (e.charCode < 48 || e.charCode > 57))
            e.preventDefault();
        if(valueLength != "" || valueLength > 0 || typeof valueLength != 'undefined')
        {
            valueLength = parseInt(valueLength);
            if(!isNaN(valueLength) && $(this).val().length == valueLength)
                e.preventDefault();
        }
    })

</script>