@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })
@model _360Accounting.Web.Models.LocatorListModel

@{
    ViewBag.Title = "Locator";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="form-group">
            <input type="button" id="btnCreate" value="Create New" class="btn btn-default tstyCus-btn" />
        </div>
    </div>

    <div id="dvList" class="col-lg-12 cusGridWrapper">
        @Html.Action("LocatorPartial", Model)
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();

        $('#btnCreate').click(function () {
            var url = '@Url.Content("~/Locator/Create")';
            window.location.href = url;
        });

        jQuery.ajaxSetup({ async: false });

        function RefreshGrid() {
            var url3 = '@Url.Content("~/Locator/LocatorPartial")';

            $.get(url3, null,
                function (data) {
                    $('#dvList').html(data);
                });
        }
    });
</script>