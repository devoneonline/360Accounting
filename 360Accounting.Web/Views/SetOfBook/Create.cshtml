@model _360Accounting.Web.Models.SetOfBookModel

@{
    ViewBag.Title = "Create Book";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @ViewBag.Title
        </h1>
    </div>
</div>

<div class="col-lg-6">
    @using (Html.BeginForm("Create", "SetOfBook", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.CompanyId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
            <input type="button" value="Cancel" class="btn btn-default" onclick="javascript: window.location.href='@Url.Content("~/SetOfBook/Index")'" />
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
    }
    }
</div>