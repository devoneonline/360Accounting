@model _360Accounting.Web.Models.SetOfBookListModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@{
    if (Model.SetOfBooks != null)
    {
        if (Model.SetOfBooks.Count() > 0)
        {
            var grid = new WebGrid(canSort: true);
            grid.Bind(Model.SetOfBooks);

            @grid.GetHtml(tableStyle: "table",
                            mode: WebGridPagerModes.All,
                            numericLinksCount: 10,
                            htmlAttributes: new { style = "width:100%" },
                            columns: grid.Columns
                            (grid.Column(columnName: "Id",
                                            header: "SOB Id",
                                            canSort: true),
                            grid.Column("Name", header: "SOB Name", canSort: true),
                            grid.Column("", "", style: "ActionLink",
                                format: (item) => Html.Raw("<a href='" + 
                                    @Url.Content("~/SetOfBook/Edit/") + item.Id + "'>Edit</a>")),
                            grid.Column("", "", style: "ActionLink",
                                format: (item) => Html.Raw("<a href='" + 
                                    @Url.Content("~/SetOfBook/Delete/") + item.Id + "'>Delete</a>")
                    )))
        }
        else
        {
            <div id='dvNoRecord'>No Record Found!</div>
        }
    }
}