@model _360Accounting.Web.Models.FeatureSetAccessModel

@{
    ViewBag.Title = "Featureset Access";
}

<div class="container">
    <div class="clearfix">
        <div class="col-lg-12">
            <h3 class="page-header">
                @ViewBag.Title
            </h3>
        </div>
    </div>
@using (Html.BeginForm("UserFeatureSet", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
    @Html.ValidationSummary()
    @Html.HiddenFor(model=> model.FeatureSetId)
    <div class="clearfix">
        <div class="col-md-6">
            <div class="form-group customDropDownWrapper">
                @Html.LabelFor(model => model.SelectedUsers)
                @Html.ListBoxFor(model => model.SelectedUsers, new SelectList(Model.AvailableUserList, "Value", "Text"), new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="clearfix">
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default tstyCus-btn" />
                <input type="button" value="Cancel" class="btn btn-default tstyCus-btn" onclick="javascript: window.location.href='@Url.Content("~/User/FeatureSet/")' + @AuthenticationHelper.CompanyId.Value " />
            </div>
        </div>
    </div>
}
</div>
